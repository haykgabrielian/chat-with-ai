{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "node_modules/styled-components"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}